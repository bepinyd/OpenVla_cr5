<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="openvla_test">

    <!-- Sun & ground -->
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Table -->
    <include>
      <uri>model://cafe_table</uri>
      <pose>0 0 0 0 0 0</pose>
    </include>

    <!-- Red cube (5 cm) -->
    <model name="red_cube">
      <static>true</static>
      <pose>0.40  0.10  0.78  0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>0.1 0.1 0.1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
          <material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- Green cube (5 cm) -->
    <model name="green_cube">
      <static>true</static>
      <pose>0.20 -0.10 0.78 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>0.1 0.1 0.1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>0.05 0.05 0.05</size></box></geometry>
          <material><ambient>0 1 0 1</ambient><diffuse>0 1 0 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="top_down_camera">
      <static>true</static>
      <pose>0 0 2.3 0 0 0</pose> <!-- Looking straight down -->
    
      <link name="camera_link">
        <visual name="camera_visual">
          <geometry>
            <box><size>0.1 0.1 0.1</size></box>
          </geometry>
          <material><ambient>0 0 0 0</ambient></material> 
        </visual>
    
        <sensor name="camera_sensor" type="camera">
          <pose>0 0 0 1.5708 1.5708 0</pose> <!-- No additional offset -->
          <always_on>true</always_on>
          <update_rate>30</update_rate>
          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip><near>0.1</near><far>10</far></clip> <!-- Increased far plane -->
          </camera>
    
          <plugin name="camera_plugin" filename="libgazebo_ros_camera.so">
            <camera_name>top_down_camera</camera_name>
            <image_topic_name>image_raw</image_topic_name>
            <camera_info_topic_name>camera_info</camera_info_topic_name>
            <frame_name>top_down_camera_link</frame_name>
          </plugin>
        </sensor>
      </link>
    </model>
    

  </world>
</sdf>
