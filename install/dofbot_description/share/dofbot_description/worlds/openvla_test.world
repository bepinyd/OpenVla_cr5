              <geometry>
                  <plane>
                      <normal>0 0 1</normal>
                      <size>100 100</size>
                  </plane>
              </geometry>
              <material>
                  <ambient>0.8 0.8 0.8 1</ambient>
                  <diffuse>0.8 0.8 0.8 1</diffuse>
                  <specular>0.8 0.8 0.8 1</specular>
              </material>
          </visual>
      </link>
  </model>


    <!-- Red Cube -->
